<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:src="@drawable/profile_png_free_image"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="8">

        <TextView
            android:id="@+id/namerecommendedfriend2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chewy"
            android:text="First and last name"
            android:textColor="#020000"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/userrecomended2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" @user"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/sharp_add_black_36" />

    <ImageView
        android:id="@+id/imageViewRechazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/sharp_remove_black_36" />


</LinearLayout>